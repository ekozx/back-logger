%h1 People followering you
%ul
  - if @followers == nil || @followers.count == 0
    %p No followers:(
  - else
    - @followers.all.each do |follower|
      %li
        = link_to follower.first_name, user_path(follower)
        = link_to "follow", "/users/follow/" + follower.id.to_s, remote: true, method: :get
