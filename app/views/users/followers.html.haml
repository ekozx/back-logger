.col-lg-8
  %h1 People followering you
  %ul
    - if @followers == nil || @followers.count == 0
      %p No followers:(
    - else
      - @followers.all.each do |follower|
        %li.well.well-sm
          = link_to image_tag(follower.avatar.url(:thumb)), user_path(follower)
          = link_to follower.name, user_path(follower)
          = link_to "follow", "follow/" + follower.id.to_s, remote: true, method: :get, class: "right"
