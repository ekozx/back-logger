!!!
%html
  %head
    %title LogFlix
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.container-fluid
    .navbar.navbar-default
      %h1.navbar-brand
        = link_to "Zappcord", '/'
    - if user_signed_in?
      .col-lg-3.text-center
        %ul.nav.nav-pills.nav-stacked.well
          %li
            = link_to image_tag(current_user.avatar.url(:thumb), class: 'img-circle'), '/'
          %li
            = link_to "Settings", edit_user_registration_path
          %li
            = link_to "Following", users_following_path
          %li
            = link_to "Followers", users_followers_path
          %li
            = link_to "Advanced Search", '/search'
          %li
            = link_to "Sign out", destroy_user_session_path, :method => :delete
    - else
      = link_to "Sign up", '/users/sign_up'
      or #{link_to "Sign in", new_user_session_path}
  .col-lg-8.col-lg-offset-1
    = yield
