= render "devise/shared/call_to_action"
.col-lg-4.static_well
  = render "devise/shared/links"
  %h2 Sign up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      = f.label :email, "email (not required)"
      %br/
      = f.email_field :email, :autofocus => true, class: 'form-control'
    %div
      = f.label :name, "name (not required)"
      %br/
      = f.text_field :name, :autofocus => true, class: 'form-control'
    %div
      = f.label :nickname, "nickname (required)"
      %br/
      = f.text_field :nickname, :autofocus => true, class: 'form-control'
    %div
      = f.label :password
      %br/
      = f.password_field :password, class: 'form-control'
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, class: 'form-control'
    %div
      = f.label :avatar
      %br/
      .btn.btn-default.btn-file
        #{f.file_field :avatar}
    %br/
    %div= f.submit "Sign up", class: 'btn btn-primary'
