= render "devise/shared/call_to_action"
.col-lg-4
  .static_well
    %h2 Sign in
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:novalidate => 'novalidate'}) do |f|
      %div.input-group
        = f.label :login
        %br/
        = f.email_field :login, :autofocus => true, class: 'form-control'
      %div.input-group
        = f.label :password
        %br/
        = f.password_field :password, class: 'form-control'
      - if devise_mapping.rememberable?
        %div
          = f.check_box :remember_me
          = f.label :remember_me
      %br/
      %div= f.submit "Sign in", class: 'btn btn-primary'

    = render "devise/shared/links"
