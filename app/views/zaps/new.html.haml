- if user_signed_in?
  .static_well.col-lg-8
    %h3 Zap your friend
    %h3 What would you like them to watch?
    = render 'shared/entries_search'
    = render 'shared/results'

    = form_tag zaps_path, method: 'post' do

      = label :zap, :name, 'Title'
      = text_field :zap, 'title'

      = label :zap, :name, 'Friend'
      = text_field :zap, "username"

      = label :zap, :name, 'message'
      = text_field :zap, 'message'

      -# = label :zap, :name, 'movie'
      -# = text_field :zap, 'movie'

      = hidden_field_tag(:receiver_id, "9")
      = hidden_field_tag(:entry_id, "65")

      = submit_tag 'Save Changes'
